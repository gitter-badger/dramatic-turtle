{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make Docker image",
            "type": "shell",
            "command": "make build-docker"
        },
        {
            "label": "Unix: Make Docker image and run it",
            "type": "shell",
            "command": "make build-docker && make run-docker"
        },
        {
            "label": "Windows: Make Docker image and run it",
            "type": "shell",
            "command": "make build-docker; make run-docker"
        },
        {
            "label": "Docker: Remove dangling images",
            "type": "shell",
            "command": "docker rmi $(docker images --filter “dangling=true” -q --no-trunc)"
        }
    ]
}